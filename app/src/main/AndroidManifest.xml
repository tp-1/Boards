<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.i5.boards">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.board.BoardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.newItem.NewIssueActivity" />
        <activity android:name=".ui.newItem.NewStoryActivity" />
        <activity android:name=".ui.newItem.NewBoardActivity" />
        <activity android:name=".data.db.AndroidDatabaseManager" />
        <activity android:name=".ui.debugScreen.DebugScreenActivity" />
    </application>

</manifest>